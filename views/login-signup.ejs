    <form method="POST" action="/signup" class="space-y-4">

      <div>
        <label for="name" class="text-sm font-medium leading-6 text-gray-900">Name</label>
        <div class="mt-1">
          <input type="text" name="name" class="w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-500 focus:outline-none sm:text-sm sm:leading-6">
        </div>
      </div>

      <div>
        <label for="username" class="text-sm font-medium leading-6 text-gray-900">Username</label>
        <div class="mt-1">
